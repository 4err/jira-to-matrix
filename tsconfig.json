{
    "compilerOptions": {
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "strictNullChecks": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "esModuleInterop"             : true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        // "lib": ["esnext"],
        "target": "ES2019",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        // "moduleResolution": "Node"
    },
    "exclude": ["node_modules"]
}
